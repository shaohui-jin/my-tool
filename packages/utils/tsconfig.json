{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": false,

    /* Bundler mode */
    "moduleResolution": "bundler",

    "types": ["vue"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Linting */
    "strict": true,
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist"]
}
